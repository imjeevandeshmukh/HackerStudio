<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".view.PlayerActivity">

    <RelativeLayout
        android:id="@+id/ivCoverBackground"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@color/colorGray" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cVCover"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp">

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="Cover" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCoverBackground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Loading.."
        android:textColor="@color/colorBlack"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSongName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Loading.."
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:elevation="12dp"
            android:id="@+id/ivPalm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/playCard"
            android:src="@drawable/ic_pan_tool"
            android:tint="@color/colorPrimary" />

        <androidx.cardview.widget.CardView
            android:id="@+id/playCard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="90dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/playIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </FrameLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvArtistName"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/buyCard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="30dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="90dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_add_shopping_cart_black_24dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>